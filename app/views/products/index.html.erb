<h1>Products</h1>

<div class="panel panel-default">
  <table class="table">
    <tr>
      <th><%= "Name" %></th>
      <th><%= "Description" %></th>
    </tr>

    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.description %></td>
      </tr>
    <% end %>
  </table>
</div>
